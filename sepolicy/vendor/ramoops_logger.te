# ramoops_logger service
type ramoops_folder, file_type, data_file_type;

type ramoops_logger, domain;
type ramoops_logger_exec, vendor_file_type, exec_type, file_type;

init_daemon_domain(ramoops_logger)

allow ramoops_logger pstorefs:dir r_dir_perms;
allow ramoops_logger pstorefs:file r_file_perms;

allow ramoops_logger ramoops_folder:dir { rw_dir_perms create };
allow ramoops_logger ramoops_folder:file { rw_file_perms create };

allow shell ramoops_folder:dir r_dir_perms;
allow shell ramoops_folder:file r_file_perms;